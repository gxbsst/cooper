<%= render "share/store_sidebar" %>
<%= javascript_include_tag "jquery", "jquery-ui","jquery_ujs","underscore", "backbone",'fancybox', "region_china"%>
<%= stylesheet_link_tag 'fancybox' %>
<%#= javascript_include_tag "application"%>
<div id="rightcontent">
  <div id="site"><a href="/shop_cpc.htm">营销网络</a><span>&gt;</span>查找店铺</div>
  <div id="shopsearch">
    <div class="tabs">
      <ul>
        <li><a class="current" href="/stores/search">精确查找</a></li>
        <li><a href="/stores/search_2">模糊查找</a></li>
      </ul>
    </div>

    <div class="body">
      <div class="map">
        <%= render "map", :tudes => @tudes, :center => @center, :zoom => @zoom %>
        <br />
        <%= link_to '查看全图', map_url_params(@center, @zoom), :class => 'various fancybox.iframe', 'data-fancybox-type' =>"iframe" %>
      </div>
      <div class="sc_kk">
        <div class="searchtable">
          <%= form_tag "/stores/search" do  -%>
            <%= render "region"%>
          <% end -%>
        </div>
        <% if request.post? %>
          <% unless  @stores_2.blank? %>
            <%= render  @stores_2 %>
          <% else %>
            <br />
            <h2 class='error'>没有找到相应的店铺。</h2>
            <br />
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
  <div class="totop"><a href="#header"><img src="/pic/totop.jpg" alt="回顶部" title="回顶部" /></a></div>
</div>
<div class="clear"></div>




<% shop_type = {"CPC" => "嘉车坊", "CC" => "店中店", "CTCC" =>  "替换中心", "CSSPLUS" => "店招店", "CSS+" => "店招店", "CSS" => "招牌店", "INDEPENDENT" => "独立授权店", "OTHERS" => "其他" }%>
<div class="list">
 <ul>
   <li>
    <dl>
     <dt><%= store.shop_name %></dt>
     <dd>
      <p><%= store.address unless store.address == "0" %></p>
      <p><%= store.telephone  %></p>
     </dd>
   </dl>
   <% unless store.shop_type.blank? %>
   <div class="tip">
       <span class="tip_left"><img src="/pic/tip2.jpg" width="8" height="20"></span>
       <span class="tip_con"><%= shop_type[store.shop_type.upcase] %></span>
       <span class="tip_right"><img src="/pic/tip4.jpg" width="8" height="20"></span>
   </div>
   <% end %>
   </li>
 </ul>         
 </div>

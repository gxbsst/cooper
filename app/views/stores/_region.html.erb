<div id="region" >
  <table cellpadding="0" cellspacing="0">
    <tr>
      <td class="td">省份</td>
      <td>
		    <span id="province">
		    	<%= select_tag "region[province]", options_for_select(Store.province_collection), :prompt => '-请选择-', :class => "select" %>
		    </span>
      </td>

    </tr>
    <tr>
      <td class="td">城市</td>
      <td>
		    <span id="city">
		    	<%= select_tag "region[city]", options_for_select([]), :prompt => '-请选择-', :class => "select" %>
		    </span>
      </td>

    </tr>
    <tr>
      <td class="td">店铺类型</td>
      <td>

        <%= select_tag "region[shop_type]", options_for_select([["嘉车坊", "CPC"],["店中店", "CC"],["替换中心", "CTCC"],["店招店", "CSSPLUS"],["招牌店", "CSS"],["独立授权店", "INDEPENDENT"],["其他", "OTHERS"]]), :prompt => '-请选择-', :class => "select" %>
      </td>

    </tr>
  </table>
  <input type="submit" class="searchbtn" value="查询" />
</div>

<style type="text/css">
  #region {
    position: relative;
  }
  .searchbtn {
    position: absolute;
    right: 113px;
    top: 31px;
  }
  #region_province, #region_city {
    width: 86px;
  }
  #region_shop_type {
    margin-left: 0;
  }
  #region select {
    width: 90px;
  }
</style>

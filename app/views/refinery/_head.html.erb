<head>
  <meta charset='<%= Rails.application.config.encoding %>' />
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
  <title> <%= yield_for(:title, "固铂轮胎") %></title>
  <% if controller_name == 'static' && action_name == 'index' %>
  <link rel="canonical" href=" http://www.coopertire.com.cn/">
  <% end %>
  <%= raw(%(<meta name="description" content="#{@meta_description}" />)) if @meta_description.present? -%>
  <%= raw(%(<meta name="keywords" content="#{@meta_keywords}">)) if @meta_keywords.present?   -%>
  <%= raw(%(<link rel="canonical" content="#{@canonical}" />)) if @canonical.present? -%>
  <%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
  <%= yield :meta %>

  <%= javascript_include_tag "jquery" %>
  <%= stylesheet_link_tag "/css/global", "/css/download", "/css/index", "/css/products_detail", "/css/reason" %>
  <%= stylesheet_link_tag "home" if home_page? %>
  <%#= yield :stylesheets %>
  <%= yield :canonical %>
  <%= render '/refinery/google_analytics' %>

</head>
